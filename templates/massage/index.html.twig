{% extends 'base.html.twig' %}

{% block title %}Massages{% endblock %}
{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="/css/style.css">
{% endblock %}
{% block body %}

<section class="massages">
<div class="container">
<h2>Our Massages</h2>
</div>

<div class="container hstack gap-5">
  
		<div class="row mx-auto py-5">
        {% for massage in massages %}

			<div class="col-4 mt-3">
				<img class="w-100 h-50" src="{{ asset('images/'~ massage.cover) }}" class="rounded mx-auto" alt="Thai massage">
                <h3 class="pt-5 pb-2">
					{{ massage.name }}
				</h3>
                <p class="py-4">
					{{ massage.description|u.truncate(150, '...') }}
				</p>
                <p class="pb-4"><span>30 min {{massage.price}} € , 60 min {{massage.price}} €</span></p>
				<a class="btn btn-outline-primary mb-5" href="{{ path('app_reservation', { id: massage.id }) }}" role="button">
					réserver
				</a>
			</div>
        {% endfor %}
		</div>
       
	</div>
</section>
{% endblock %}
