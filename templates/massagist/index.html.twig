{% extends 'base.html.twig' %}

{% block title %}Massagist{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}"> 
{% endblock %}

{% block body %}

<div class="container">
<section class="equipe mt-5">
    <div class="container-fluid">

    <div class="row ">
    {% for massagist in massagists %}

        <div class="col-12 col-lg-4 mx-auto text-center ">
            
            <img src="{{ asset('images/'~ massagist.cover) }}" alt="{{ massagist.name ~ ' - image' }}" class="equipe-img ">
            <h3 class="mt-3">{{massagist.name}}</h3>
            <p  class="mt-3">{{massagist.description}}</p>
            
        </div>
        
    {% endfor %}
    </div>
    </div>

</section>
</div>

{% endblock %}
